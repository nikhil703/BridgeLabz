	public static void main(String args[])
	{
		Scanner sc=new Scanner(System.in);
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter the size to generate coupon number");
		int size=scan.nextInt();
		int array[] = new int[size];
		int value, position = 0, j;
		Static sf = new Static(); // object creation.

		while (position != size) {
			value = sf.get();
			j = 0;
			if (position == 0) {
				array[position] = sf.get();
				position++;
			} else {
				for (int z : array) {
					if (z == value) {
						j = 1;
						break;
					}
				}
				if (j == 0) {
					array[position] = value;
					position++;
				}

			}
		}
	}
	
	public int get() {
		value = r.nextInt(99);
		return value;
