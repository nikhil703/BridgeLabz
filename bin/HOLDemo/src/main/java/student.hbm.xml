<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.bridgelabz.model.Student" table="Student">
	
	<id column="ID" name="rollNo" type="int">
	<generator class="increment" />
	</id>
	<property column="Roll_No" name="rollNo" type="int"></property>
	<property column="Name" name="name" type="string"></property>
	<property column="Address" name="address" type="string"></property>
	</class>

</hibernate-mapping>